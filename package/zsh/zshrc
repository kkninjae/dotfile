export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin
export ZSH=~/.oh-my-zsh

# zsh theme
ZSH_THEME="simple"

# disable auto-setting terminal title
DISABLE_AUTO_TITLE="true"

# plugins
plugins=(
  git
  tmux
  pip
  docker
  npm
)

# init oh-my-zsh
source $ZSH/oh-my-zsh.sh

# fetch dotfile path
export SHELL_RC=$(readlink ~/.zshrc)
export DOT_HOME=${SHELL_RC%/package*}

# load package config
for config in $DOT_HOME/package/**/*rc.sh; do
  source "$config"
done

# load custom config
if [ -e "$DOT_HOME/custom/config.sh" ]; then
  source "$DOT_HOME/custom/config.sh"
fi
