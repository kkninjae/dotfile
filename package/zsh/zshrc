# set env searching path
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin
export ZSH=~/.oh-my-zsh

# zsh theme
ZSH_THEME="simple"

# disable auto-setting terminal title
DISABLE_AUTO_TITLE="true"

# plugins
plugins=(
  git
  tmux
  pip
  docker
  npm
)

# init oh-my-zsh
source $ZSH/oh-my-zsh.sh

alias vizshrc="vi ~/.zshrc"

# load custom configs
DOT_HOME=$(readlink ~/.zshrc)
export DOT_HOME=${DOT_HOME%/zsh/*}
export PKG_HOME=${DOT_HOME%/package*}
if [ -e "$DOT_HOME/sh/import.sh" ]; then
  source "$DOT_HOME/sh/import.sh"
fi
